<header class=".nav-container">
    <div class="nav">
        <div class="logo">
        <img src="{{ 'Loki.png' | asset_img_url }}" alt="Logo of Loki">
        <h1>{{ shop.name }}</h1>
        </div>
        <ul class="nav-list">
            <li>
                {% for link in linklists.main-menu.links -%}
                    {{ link.title | link_to: link.url }}
                {%- endfor %}
            </li>
        </ul>
    </div>    

    {% if section.settings.show_search %}
        <form action="/search">
            <input type="search"
                placeholder="Search"
                name="q"
                value="{{ search.terms | escape }}"
            >
            <input type="submit" value="Search">
        </form>
    {% endif %}

</header>

<style>
    .nav{
        background-color: {{section.settings.bg}};
    }
</style>
{%  stylesheet  %} 
    .nav{
        padding-top: 300px;
        
    }
{% endstylesheet %}

{%  javascript  %} 
    console.log("Heeeeeyyy yaaaaaaa")
{% endjavascript %}
{%  schema  %} 
    {
        "name": "Header",
        "settings": [
            {
                "type": "checkbox",
                "id": "show_search",
                "label": "Show search form?",
                "default": true
            },
            {
                "type": "color",
                "id": "bg",
                "label": "Background color"
            }
        ]
    }
{% endschema %}