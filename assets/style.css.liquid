* {
    padding: 0;
    margin: 0;
}

body {
    box-sizing: border-box;
    font-family: 'Source Sans', sans-serif;
    background-color: {{ settings.color_page_bg}};
}

/* HEADER */
.nav-container {
    margin: 0 auto;
}

.nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.logo {
    font-family: 'Rushford Clean', sans-serif;
    display: flex;
    align-items: center;
    justify-self: center;
}

.logo h1 {
    font-size: 3rem;
    padding-top: 12px;
    color: #000000; 
}

.logo img {
    height: 4rem;
}

.nav ul{
    list-style: none;
}

.nav-list li a {
    margin-left: 50px;
    padding: 15px;
    text-decoration: none;
    transition: ease .6s;
    font-size: 2rem;
    font-weight: bold;
    color: #000000; 
}

.nav-list li a:hover{
    /* background-color: #044604; */
    color: #ffffff;
}
