

{% form 'cart', cart %}

    <h1>Cart</h1>

    {% if cart.empty? %}
        <p>Your cart is empty!</p>
    {% else %}
        {% for item in cart.items %}
            <div>
                <img src="{{ item.image | image_url: width: 200 }}" alt="item image">
                <h2>{{ item.title }}</h2>
                <p>{{ item.final_price | money}}</p>
                <input name="updates[]" value="{{ item.quantity }}">
                <a href="{{ item.url_to_remove }}">ðŸ—‘</a>
            </div>
        {% endfor %}

        <hr/>

        <p>Quantity total: {{ cart.item_count }}</p>
        <p>Cart total: {{ cart.total_price | money }}</p>
        <button type="submit" name="update">Update</button>
        <button type="submit" name="checkout">Checkout</button>

    {% endif %}
    
{% endform %}