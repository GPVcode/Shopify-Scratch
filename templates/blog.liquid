
{%  paginate blog.articles by 4 %}  
<h1>{{ blog.title }}</h1>

{%- assign blogArticles = blog.articles %}

{% for article in blogArticles %}
    <div>
        <a href="{{ article.url }}">
            <h2>{{ article.title }}</h2>
            <p>{{ article.author }}</p>
            <div>{{ article.excerpt }}</div>
        </a>
    </div>
    {{- article.title | link_to: article.url }}
{% endfor %} 


{{ paginate | default_pagination }}

{% endpaginate %}